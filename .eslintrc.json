{
  "extends": "standard",
  "plugins": [
    "standard",
    "promise",
    "babel"
  ],
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "parser": "babel-eslint",
    "rules": {
      "strict": 0
    }
  },
  "rules": {
    "babel/new-cap": 1,
    "babel/no-invalid-this": 1,
    "babel/object-curly-spacing": 0,
    "babel/quotes": 0,
    "babel/semi": 1,
    "babel/no-unused-expressions": 1,
    "one-var": "off",
    "no-unused-vars": "warn",
    "no-return-assign": "warn",
    "space-before-function-paren": "off",
    "semi": "off"
  },
  "globals": {
    "kendo": true,
    "window": true
  }
}
